<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    tools:context=".PeparationFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN_BACKGROUND"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <TextView
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/wact_name"
        android:background="@drawable/button_bac_two"
        android:padding="5dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="ওয়াক্তের নাম"
        android:drawableLeft="@drawable/circle_24"
        android:drawableRight="@drawable/circle_24"
        android:fontFamily="@font/kalpurush_reg"/>
    <TextView
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/wact_preparation_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:fontFamily="@font/kalpurush_reg"
        style="@style/PRIMARY_TEXT_COLOR"/>
    <TextView
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/wact_preparation_full_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:fontFamily="@font/kalpurush_reg"
        style="@style/PRIMARY_TEXT_COLOR"/>
</LinearLayout>
</ScrollView>
